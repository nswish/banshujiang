<div class="row">
  <div class="span6">
  <%= form_for(@e_book, :html=>{:multipart=>true}, :builder=>EbookFormBuilder) do |f| %>
    <% if @e_book.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@e_book.errors.count, "error") %> prohibited this e_book from being saved:</h2>

        <ul>
        <% @e_book.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :name, '书籍名称'%>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :author, '作者' %>
      <%= f.text_field :author %>
    </div>
    <div class="field">
      <%= f.label :publish_year, '出版年份' %>
      <%= f.number_field :publish_year %>
    </div>

    <% ValueSetHeader.categories.each do |category|  %>
    <div class="field">
      <%= f.label ActiveSupport::Inflector.singularize(category.name), category.title %>
      <%= f.category_select(ActiveSupport::Inflector.singularize(category.name)) %>
    </div>
    <% end %>

    <div class="field">
      <%= f.label :format, '格式' %>
      <%= f.select(:format, [["PDF", "PDF"], ["CHM", "CHM"]]) %>
    </div>
    <div class="field">
      <%= f.label :language, '语言' %>
      <%= f.select(:language, [["英文", "英文"], ["中文", "中文"]]) %>
    </div>
    <div class="field">
      <%= f.label :image_large_file, '书籍封面' %>
      <%= f.file_field :image_large_file %>
    </div>

    <% Attr.all.each do |attr|
       e_book_attr = @e_book.e_book_attrs.where(:attr_id=>attr.id).first %>
    <div class="field">
      <%= label_tag Attr::TitleCache[attr.id] %>
      <%= hidden_field_tag 'e_book_attrs[][id]', e_book_attr ? e_book_attr.id : nil %>
      <%= hidden_field_tag 'e_book_attrs[][attr_id]', attr.id %>
      <%= hidden_field_tag 'e_book_attrs[][e_book_id]', @e_book.id %>
      <%= text_field_tag 'e_book_attrs[][value]', e_book_attr ? e_book_attr.value : nil %>
    </div>
    <% end %>

    <div class="field">
      <%= label_tag :token %>
      <%= text_field_tag :token, cookies[:token] %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
  </div>
  <% if @e_book.id  %>
  <div class="span6">
    <div class="field">
      <%=label_tag '下载链接列表'%>
      <ol>
      <% @e_book.webstorage_links.each do |link| %>
        <li>
          <%=link.name%> | <%=link.url%> | <%=link.ad_link%> | 
          <%= link_to '编辑', edit_e_book_webstorage_link_path(@e_book, link) %>
          <%= link_to '删除', url_for([@e_book, link]), method: :delete, data: {confirm: '确定删除么？'} %>
        </li>
      <% end %>
      </ol>
    </div>
    <hr />
    <%= form_for [@e_book, WebstorageLink.new], :builder=>EbookFormBuilder do |f|%>
    <div class="field">
      <%=f.label :url, '文件链接' %>
      <%=f.text_field :url, :class=>:span6 %>
    </div>
    <div class="actions">
      <%=f.submit '新增'%>
    </div>
    <% end %>
  </div>
  <%end%>
</div>
