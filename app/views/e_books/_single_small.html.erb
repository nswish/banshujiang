<div class="row shadow-panel" style="margin-left:0px;">
	<div class="span2">
		<%= image_tag e_book.image_small %>
	</div>
  <div class="span10" style="padding: 10px 0px 0px 10px;">
    <p><span style="color:grey;">书名：</span><%=link_to "#{e_book.name}", e_book_url(e_book) %></p>
    <p><span style="color:grey;">作者：</span><%= e_book.author %></p>
    <p><span style="color:grey;">语言：</span><%= e_book.language %></p>
    <p><span style="color:grey;">格式：</span><%= e_book.format %></p>
    <p><span style="color:grey;">出版年份：</span><%= e_book.publish_year %></p>
  </div>
</div>
