<style>
	.fontsize18 {
		font-size:18px;
	}
	a {
		font-size:14px;color:blue;
	}
</style>
<% @e_books.each do |e_book| %>
<br />
<div class="row" style="border-style:solid;border-width:1px;">
	<div class="span6" style="">
		<%= image_tag e_book.image_large, :style=>"width:420px;" %>
	</div>
	<div class="span6" style="font-size:18px;">
		<br />
		<p class="fontsize18">书名：《<%= e_book.name %>》</p>
		<p class="fontsize18">作者：<%= e_book.author %></p>
		<p class="fontsize18">语言：<%= e_book.language %></p>
		<p class="fontsize18">格式：<%= e_book.format %></p>
		<p class="fontsize18">出版社：<%= e_book.publisher %></p>
		<p class="fontsize18">出版年份：<%= e_book.publish_year %></p>
		<br />
		<p>下载链接：<%=link_to e_book.download_name, e_book.download_url, :target=>"_blank" %></p>
	</div>
</div>
<% end %>
