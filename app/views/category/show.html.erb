  <% end %>

  <% if index == 8 %>
    <div style="width:730px;margin-left:auto;margin-right:auto;padding-top:5px;padding-bottom:1px;">
      <script type="text/javascript"><!--
      google_ad_client = "ca-pub-2450778008333083";
